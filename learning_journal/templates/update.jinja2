{% extends "layout.jinja2" %}

{% block content %}
<form method="POST">
        <table>
                <tr>
                        <td><label for="title">Title:</label></td>
                        <td><input type="text" name="title" value="{{ title }}" required /></td>
                </tr>
                <tr>
                        <td><label for="description">Post:</label></td>
                        <td>
                                <textarea name="body" placeholder="{{ body }}">{{ body }}
                                </textarea>
                        </td>
                </tr>
                <tr>
                        <td></td>
                        <td><input type="submit" value="Updated Post" /></td>
                </tr>
        </table>
</form>
{% endblock %}