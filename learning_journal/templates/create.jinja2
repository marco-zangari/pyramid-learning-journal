
{% extends "layout.jinja2" %}

{% block content %}
<form method="POST">
        <table>
                <tr>
                        <td><label for="title">Title:</label></td>
                        <td><input type="text" name="title" required /></td>
                </tr>
                <tr>
                        <td><label for="body">Body:</label></td>
                        <td>
                                <textarea name="body" placeholder="Describe your post">
                                </textarea>
                        </td>
                </tr>
                <tr>
                        <td></td>
                        <td><input type="submit" value="Post New Post" /></td>
                </tr>
        </table>
</form>
{% endblock %}